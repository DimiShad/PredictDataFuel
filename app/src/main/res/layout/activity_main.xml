<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ΤΙΤΛΟΣ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⛽ ΠΡΟΒΛΕΨΗ ΚΑΤΑΝΑΛΩΣΗΣ ΚΑΥΣΙΜΟΥ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/card_background"
            android:textColor="#1976D2"
            android:layout_marginBottom="20dp" />

        <!-- ΚΑΤΑΣΤΑΣΗ ΕΦΑΡΜΟΓΗΣ -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Εκπαίδευση μοντέλου..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@drawable/status_card"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <!-- ΚΟΥΜΠΙ ΔΙΑΔΡΟΜΗΣ -->
        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="▶️ ΕΝΑΡΞΗ ΔΙΑΔΡΟΜΗΣ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/start_button"
            android:layout_marginBottom="24dp" />

        <!-- ΠΡΟΒΛΕΨΗ ΚΑΤΑΝΑΛΩΣΗΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/prediction_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔮 REAL-TIME ΠΡΟΒΛΕΨΗ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvFuelPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⛽ Τρέχουσα κατανάλωση: -- L/100km"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvTripConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Απόσταση: -- km\n⛽ Μέση κατανάλωση: -- L/100km\n🔋 Εκτιμώμενη χρήση: -- L"
                android:textSize="14sp"
                android:textColor="#555555"
                android:background="#F9F9F9"
                android:padding="12dp" />

        </LinearLayout>

        <!-- ΔΕΔΟΜΕΝΑ ΔΙΑΔΡΟΜΗΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/data_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 ΔΕΔΟΜΕΝΑ ΔΙΑΔΡΟΜΗΣ"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FF6F00"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDataCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Σημεία δεδομένων: 0"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏃 Ταχύτητα: 0.0 km/h"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 0.000000, 0.000000\n🧭 Β 0°"
                android:textSize="12sp"
                android:textColor="#999999"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- ΠΛΗΡΟΦΟΡΙΕΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_card"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ ΠΛΗΡΟΦΟΡΙΕΣ"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#7B1FA2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Η εφαρμογή εκπαιδεύεται με πραγματικά δεδομένα\n• Οι προβλέψεις βελτιώνονται με την οδήγηση\n• Τα δεδομένα αποστέλλονται αυτόματα στη βάση\n• Για βέλτιστα αποτελέσματα οδηγήστε >5 λεπτά"
                android:textSize="12sp"
                android:textColor="#666666"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>