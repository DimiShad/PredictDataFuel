<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ΤΙΤΛΟΣ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⛽ ΠΡΟΒΛΕΨΗ ΚΑΤΑΝΑΛΩΣΗΣ ΚΑΥΣΙΜΟΥ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:textColor="#1976D2"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- ΚΑΤΑΣΤΑΣΗ ΕΦΑΡΜΟΓΗΣ -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Φόρτωση δεδομένων από API..."
            android:textSize="14sp"
            android:padding="16dp"
            android:background="#FFF3E0"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:elevation="1dp" />

        <!-- ΚΟΥΜΠΙ ΔΙΑΔΡΟΜΗΣ -->
        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="▶️ ΕΝΑΡΞΗ ΔΙΑΔΡΟΜΗΣ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            android:layout_marginBottom="20dp" />

        <!-- ΠΡΟΒΛΕΨΗ ΚΑΤΑΝΑΛΩΣΗΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F5E8"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔮 REAL-TIME ΠΡΟΒΛΕΨΗ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvFuelPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⛽ Τρέχουσα κατανάλωση: -- L/100km"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTripConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Απόσταση: -- km\n⛽ Μέση κατανάλωση: -- L/100km\n🔋 Εκτιμώμενη χρήση: -- L"
                android:textSize="12sp"
                android:textColor="#555555"
                android:background="#F9F9F9"
                android:padding="8dp" />

        </LinearLayout>

        <!-- ΔΕΔΟΜΕΝΑ ΔΙΑΔΡΟΜΗΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF8E1"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 ΔΕΔΟΜΕΝΑ ΔΙΑΔΡΟΜΗΣ"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FF6F00"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDataCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📊 Σημεία δεδομένων: 0"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏃 Ταχύτητα: 0.0 km/h"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 0.000000, 0.000000\n🧭 Β 0°"
                android:textSize="11sp"
                android:textColor="#888888"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- ΑΙΣΘΗΤΗΡΕΣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3E5F5"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 ΑΙΣΘΗΤΗΡΕΣ"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#7B1FA2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvAcceleration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📈 Επιταχυνσιόμετρο: 0.0, 0.0, 0.0"
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCompass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🧭 Πυξίδα: 0.0°"
                android:textSize="11sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- ΣΥΝΔΕΣΗ ΜΕ API -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="14dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌐 ΣΥΝΔΕΣΗ ΜΕ ΒΑΣΗ ΔΕΔΟΜΕΝΩΝ"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Φόρτωση τελευταίων δεδομένων κατά την εκκίνηση\n• Αποστολή αποτελεσμάτων διαδρομής στο τέλος\n• ML πρόβλεψη με βάση το dataset.csv\n• API: http://83.212.80.156:5000/"
                android:textSize="11sp"
                android:textColor="#555555"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>